<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxa.xly2021.dao.EmplRoleDao">

    <resultMap type="com.gxa.xly2021.entity.EmplRole" id="EmplRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="emplId" column="empl_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EmplRoleMap">
        select
          id, empl_id, role_id
        from gxa_xly_2021.empl_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EmplRoleMap">
        select
          id, empl_id, role_id
        from gxa_xly_2021.empl_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EmplRoleMap">
        select
        id, empl_id, role_id
        from gxa_xly_2021.empl_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="emplId != null">
                and empl_id = #{emplId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into gxa_xly_2021.empl_role(empl_id, role_id)
        values (#{emplId}, #{roleId})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into gxa_xly_2021.empl_role(empl_id, role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.emplId}, #{entity.roleId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into gxa_xly_2021.empl_role(empl_id, role_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.emplId}, #{entity.roleId})
        </foreach>
        on duplicate key update
        empl_id = values(empl_id) , role_id = values(role_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update gxa_xly_2021.empl_role
        <set>
            <if test="emplId != null">
                empl_id = #{emplId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from gxa_xly_2021.empl_role where id = #{id}
    </delete>

<!--    通过员工id删除关系数据-->
    <delete id="delectByEmplId">
      delete from empl_role where empl_id=#{emplId}
    </delete>

</mapper>

